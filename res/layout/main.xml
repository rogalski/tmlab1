<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical|center_horizontal">
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:columnCount="5" android:rowCount="5"
            android:columnOrderPreserved="true" android:rowOrderPreserved="true"
            android:useDefaultMargins="false" android:longClickable="false" android:focusable="false"
            android:nestedScrollingEnabled="false" android:id="@+id/BTN_GRID" android:layout_gravity="center">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/BTN_C" android:layout_row="0" android:layout_column="0"
                android:textColor="#FFE2071C"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/OUTPUT" android:layout_row="0" android:layout_column="1"
                android:layout_columnSpan="4" android:elegantTextHeight="false" android:singleLine="true"
                android:textSize="48sp" android:textAlignment="viewEnd"
                android:layout_gravity="right" android:typeface="monospace"
                android:gravity="fill_horizontal|fill_vertical"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/BTN_7" android:layout_row="1" android:layout_column="0"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="8"
                android:id="@+id/BTN_8" android:layout_row="1" android:layout_column="1"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="9"
                android:id="@+id/BTN_9" android:layout_row="1" android:layout_column="3"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="/"
                android:id="@+id/BTN_DIV" android:layout_row="1" android:layout_column="4"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="4"
                android:id="@+id/BTN_4" android:layout_row="2" android:layout_column="0"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="5"
                android:id="@+id/BTN_5" android:layout_row="2" android:layout_column="1"/>
        <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </GridLayout>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="6"
                android:id="@+id/BTN_6" android:layout_row="2" android:layout_column="3"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="*"
                android:id="@+id/BTN_MULT" android:layout_row="2" android:layout_column="4"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="1"
                android:id="@+id/BTN_1" android:layout_row="3" android:layout_column="0"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="2"
                android:id="@+id/BTN_2" android:layout_row="3" android:layout_column="1"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="3"
                android:id="@+id/BTN_3" android:layout_row="3" android:layout_column="3"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="-"
                android:id="@+id/BTN_MINUS" android:layout_row="3" android:layout_column="4"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="0"
                android:id="@+id/BTN_0" android:layout_row="4" android:layout_column="0"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="."
                android:id="@+id/BTN_DOT" android:layout_row="4" android:layout_column="1"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="="
                android:id="@+id/BTN_EQ" android:layout_row="4" android:layout_column="3"
                android:textColor="#ffff9e35"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:text="+"
                android:id="@+id/BTN_PLUS" android:layout_row="4" android:layout_column="4"/>
    </GridLayout>
</LinearLayout>

